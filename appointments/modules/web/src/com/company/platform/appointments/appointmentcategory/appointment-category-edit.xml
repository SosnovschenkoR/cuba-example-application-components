<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editCaption"
        class="com.company.platform.appointments.appointmentcategory.AppointmentCategoryEdit"
        datasource="appointmentCategoryDs"
        focusComponent="fieldGroup"
        messagesPack="com.company.platform.appointments.appointmentcategory">
    <dsContext>
        <datasource id="appointmentCategoryDs"
                    class="com.company.platform.appointments.AppointmentCategory"
                    view="_local"/>
    </dsContext>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="appointmentCategoryDs">
            <column width="250px">
                <field id="name"/>
            </column>
        </fieldGroup>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
